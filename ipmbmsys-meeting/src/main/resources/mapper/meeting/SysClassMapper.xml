<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ipmbmsys.meeting.mapper.SysClassMapper">

    <resultMap type="SysClass" id="SysClassResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="location"    column="location"    />
        <result property="lecturer"    column="lecturer"    />
        <result property="organizerId"    column="organizer_id"    />
        <result property="branchId"    column="branch_id"    />
        <result property="description"    column="description"    />
        <result property="status"    column="status"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="duration"    column="duration"    />
        <result property="createTime"    column="create_time"    />
        <result property="participants"    column="participants"    />
        <result property="attachments"    column="attachments"    />
        <result property="attendanceStatus"    column="attendance_status"    />
    </resultMap>

    <sql id="selectSysClassVo">
        select id, title, location, lecturer, organizer_id, branch_id, description, status, start_time, end_time, duration, create_time, participants, attachments, attendance_status from sys_class
    </sql>

    <select id="selectSysClassList" parameterType="SysClass" resultMap="SysClassResult">
        <include refid="selectSysClassVo"/>
        <where>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="location != null  and location != ''"> and location = #{location}</if>
            <if test="lecturer != null  and lecturer != ''"> and lecturer = #{lecturer}</if>
            <if test="organizerId != null "> and organizer_id = #{organizerId}</if>
            <if test="branchId != null "> and branch_id = #{branchId}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="startTime != null "> and start_time = #{startTime}</if>
            <if test="endTime != null "> and end_time = #{endTime}</if>
            <if test="duration != null "> and duration = #{duration}</if>
            <if test="participants != null  and participants != ''"> and participants = #{participants}</if>
            <if test="attachments != null  and attachments != ''"> and attachments = #{attachments}</if>
            <if test="attendanceStatus != null  and attendanceStatus != ''"> and attendance_status = #{attendanceStatus}</if>
        </where>
    </select>

    <select id="selectSysClassById" parameterType="Long" resultMap="SysClassResult">
        <include refid="selectSysClassVo"/>
        where id = #{id}
    </select>

    <insert id="insertSysClass" parameterType="SysClass" useGeneratedKeys="true" keyProperty="id">
        insert into sys_class
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="location != null">location,</if>
            <if test="lecturer != null">lecturer,</if>
            <if test="organizerId != null">organizer_id,</if>
            <if test="branchId != null">branch_id,</if>
            <if test="description != null">description,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="duration != null">duration,</if>
            <if test="createTime != null">create_time,</if>
            <if test="participants != null">participants,</if>
            <if test="attachments != null">attachments,</if>
            <if test="attendanceStatus != null">attendance_status,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="location != null">#{location},</if>
            <if test="lecturer != null">#{lecturer},</if>
            <if test="organizerId != null">#{organizerId},</if>
            <if test="branchId != null">#{branchId},</if>
            <if test="description != null">#{description},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="duration != null">#{duration},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="participants != null">#{participants},</if>
            <if test="attachments != null">#{attachments},</if>
            <if test="attendanceStatus != null">#{attendanceStatus},</if>
        </trim>
    </insert>

    <update id="updateSysClass" parameterType="SysClass">
        update sys_class
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="location != null">location = #{location},</if>
            <if test="lecturer != null">lecturer = #{lecturer},</if>
            <if test="organizerId != null">organizer_id = #{organizerId},</if>
            <if test="branchId != null">branch_id = #{branchId},</if>
            <if test="description != null">description = #{description},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="duration != null">duration = #{duration},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="participants != null">participants = #{participants},</if>
            <if test="attachments != null">attachments = #{attachments},</if>
            <if test="attendanceStatus != null">attendance_status = #{attendanceStatus},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSysClassById" parameterType="Long">
        delete from sys_class where id = #{id}
    </delete>

    <delete id="deleteSysClassByIds" parameterType="String">
        delete from sys_class where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
